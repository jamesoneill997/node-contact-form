<form id="contact" name="contact" method="post" action="/">
    <h3>{{type}}</h3>
    <fieldset>
      <input name="name" placeholder="Your name (required)" type="text" tabindex="1" required="" autofocus="">
    </fieldset>
    <fieldset>
      <input name="email" placeholder="Your Email Address (required)" type="text" tabindex="2" required="">
    </fieldset>
    <fieldset>
      <input name="phone" placeholder="Your Phone Number (required)" type="text" tabindex="3" required="">
    </fieldset>
    <fieldset>
      <input name="subject" placeholder="Subject (required)" type="text" tabindex="4" required="">
    </fieldset>
    <fieldset>
      <textarea name="message" placeholder="Type your message here...." tabindex="5" required=""></textarea>
    </fieldset>
    <fieldset>
      <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
    </fieldset>
  </form>